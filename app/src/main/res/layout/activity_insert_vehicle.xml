<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/addCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="585dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Condition"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="633dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Notes"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addEngine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="492dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Engine Size"
        android:inputType="number" />

    <EditText
        android:id="@+id/addBody"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="539dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Body Style"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addMileage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="394dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Mileage"
        android:inputType="number" />

    <EditText
        android:id="@+id/addFuel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Fuel Type"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addDoors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="298dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Number of Doors"
        android:inputType="number" />

    <EditText
        android:id="@+id/addTransmission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="347dp"
        android:layout_marginEnd="0dp"
        android:ems="10"
        android:hint="Transmission"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addLicense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
